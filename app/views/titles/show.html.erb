<div class="title single">

	<p id="notice"><%= notice %></p>

	<h2><%= @title.title %></h2>

	<ul class="title-details">
		<li>Owned by: <%= @title.get_owner() %></li>
		<li>Held for: <%= @title.days_since_acquired() %> Days</li>
	</ul>

	  <%= image_tag(@title.image_url, :class => 'title-image img-polaroid', :size => "150x200") %>

	<div class="title-admin-tools">
		<% if session[:user_id] %>
			<%= link_to 'Edit', edit_title_path(@title), :class => 'btn' %>
		<% end %>
		<%= link_to 'Back', titles_path, :class => 'btn' %>
	</div>

</div>