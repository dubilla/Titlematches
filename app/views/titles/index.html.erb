<h1>Titles</h1>

<table>
  <tr>
	<th></th>
    <th>Title</th>
    <th>Owner</th>
	<th>Held For</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @titles.each do |title| %>
  <tr>
	<td><%= image_tag(title.image_url, :class => 'title-image', :size => "150x200") %></td>
    <td><%= title.title %></td>
    <td><%= title.owner %></td>
	<td><%= title.days_since_acquired() %> Days</td>
    <td><%= link_to 'Show', title %></td>
    <td><%= link_to 'Edit', edit_title_path(title) %></td>
    <td><%= link_to 'Destroy', title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

