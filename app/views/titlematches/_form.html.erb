<%= form_for(@titlematch) do |f| %>
  <% if @titlematch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@titlematch.errors.count, "error") %> prohibited this titlematch from being saved:</h2>

      <ul>
      <% @titlematch.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title_id %><br />
    <%= f.select :title_id, Title.all.collect { |t| [t.title, t.id] }, { :prompt => "Which title was up?" } %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
<% #blog this difference for prompt/... - http://apidock.com/rails/ActionView/Helpers/FormOptionsHelper/select - search:rxcfc%>
    <%= f.select :user_id, User.all.collect { |u| [u.display_name, u.id] }, { :prompt => "Who won?"} %>
  </div>
  <div class="field">
    <%= f.label :date_won %><br />
    <%= f.date_select :date_won %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
